<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/norokoro_haikei"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/norokoro_haikei"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/norou_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/noro"
        app:layout_constraintVertical_bias="0.604" />

    <ImageView
        android:id="@+id/korosu_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/koro"
        app:layout_constraintVertical_bias="0.604" />

    <ImageView
        android:id="@+id/dislike_image_view"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/dislike_boy" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:text="@string/blank"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/dislike_image_view"
        android:gravity="center_horizontal" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/norokorotyan"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/dislike_image_view"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="250dp"
        android:src="@drawable/hukidasi"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/dislike_image_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>